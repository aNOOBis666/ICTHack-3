<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30sp">

    <TextView
        android:id="@+id/balance_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="32sp"
        tools:text="50 монет" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:gravity="center_vertical"
        app:cardCornerRadius="10dp"
        app:cardElevation="1pt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pig_image_view"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="5sp"
                app:srcCompat="@drawable/pig"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/product_pig_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buy_pig_str"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buy_pig_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:text="@string/buy_str"
                android:textColor="@color/black"
                app:backgroundTint="@color/white" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        app:cardCornerRadius="10dp"
        app:cardElevation="1pt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/goose_image_view"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="5sp"
                tools:src="@mipmap/ic_launcher"
                app:srcCompat="@drawable/goose"/>

            <TextView
                android:id="@+id/product_goose_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="@string/buy_goose_str"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buy_goose_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:text="@string/buy_str"
                android:textColor="@color/black"
                app:backgroundTint="@color/white" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        app:cardCornerRadius="10dp"
        app:cardElevation="1pt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/goat_image_view"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="5sp"
                app:srcCompat="@drawable/goat" />

            <TextView
                android:id="@+id/product_goat_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buy_goat_str"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buy_goat_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:text="@string/buy_str"
                android:textColor="@color/black"
                app:backgroundTint="@color/white" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>

